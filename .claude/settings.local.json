{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(ls:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(jq:*)",
      "Bash(comm:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(diff:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(tr:*)",
      "Bash(touch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(git remote:*)",
      "Bash(tsc:*)",
      "Bash(prettier:*)",
      "Bash(eslint:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(env:*)",
      "Bash(date:*)",
      "Bash(pwd:*)",
      "Bash(tree:*)",
      "Bash(file:*)",
      "Bash(du:*)",
      "WebSearch",
      "Bash(pnpm run lint:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:www.electron.build)",
      "Bash(npm info:*)",
      "Bash(pnpm run check:types:*)",
      "Bash(pnpm run test-node:*)",
      "Bash(npx eslint:*)",
      "Bash(pnpm run eslint:*)",
      "Bash(pnpm exec prettier:*)",
      "Bash(pnpm run test-electron:*)",
      "Bash(pnpm exec eslint:*)"
    ]
  },
  "hooks": {
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git diff --name-only HEAD 2>/dev/null | grep -E '\\.(ts|tsx|js|json|scss|md)$' | xargs -r pnpm exec prettier --write 2>/dev/null || true",
            "timeout": 60,
            "statusMessage": "Running prettier on changed files"
          },
          {
            "type": "command",
            "command": "git diff --name-only HEAD 2>/dev/null | grep -E '\\.(ts|tsx)$' | xargs -r pnpm exec eslint --fix 2>/dev/null || true",
            "timeout": 120,
            "statusMessage": "Running eslint --fix on changed files"
          }
        ]
      }
    ]
  }
}
